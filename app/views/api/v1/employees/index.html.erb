<p id="notice"><%= notice %></p>

<h1>Employees</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= link_to 'Show', [:api, :v1, employee] %></td>
        <td><%= link_to 'Edit', edit_api_v1_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', [:api, :v1, employee], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_api_v1_employee_path %>
